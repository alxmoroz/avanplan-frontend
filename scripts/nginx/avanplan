server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name avanplan.ru;
    ssl_certificate /etc/letsencrypt/live/avanplan.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/avanplan.ru/privkey.pem; # managed by Certbot


    location / {
        root /var/www/avanplan;
        try_files $uri $uri/ /index.html;
        default_type application/json;
    }

    location /api/ {
        include proxy_params;
        proxy_pass http://localhost:8000/;
    }


}